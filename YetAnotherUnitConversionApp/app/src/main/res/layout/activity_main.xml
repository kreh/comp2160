<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_drawable"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:id="@+id/title" android:layout_weight="1"
            android:textSize="40sp" android:textStyle="bold|italic" android:textAllCaps="true"
            android:gravity="top|center" android:shadowColor="@color/compLab2MainLight"
            android:hapticFeedbackEnabled="true" android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/mainTextInput" android:layout_weight="1" android:text="@string/mainTextInput"
            android:gravity="center_horizontal"
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp" android:textSize="120sp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="60dp" android:layout_marginRight="60dp" android:layout_marginTop="164dp"
            app:layout_constraintTop_toBottomOf="@+id/title"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tempChange"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/mainTextInput"
            app:layout_constraintStart_toStartOf="@+id/mainTextInput" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/mainTextInput"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:theme="?android:attr/fastScrollStyle" android:verticalScrollbarPosition="defaultPosition"
            android:scrollbars="horizontal|vertical" tools:targetApi="lollipop" tools:spinnerMode="dropdown"
            android:addStatesFromChildren="true" android:animateLayoutChanges="true"
            android:focusableInTouchMode="true" android:gravity="center" android:longClickable="true"
            android:entries="@string/C"
    />
    <TextView
            android:text="@string/output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/output" android:textSize="120sp"
            android:textStyle="bold" android:gravity="center" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/title" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.342"/>
</android.support.constraint.ConstraintLayout>
